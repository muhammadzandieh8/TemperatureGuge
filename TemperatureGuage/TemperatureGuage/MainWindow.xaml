<Window x:Class="TemperatureGuage.MainWindow"
        xmlns:local="clr-namespace:TemperatureGuage"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        mc:Ignorable="d"
        Title="TemperatureGuage" Height="800" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <materialDesign:Card Grid.Column="0"  >
            <local:UC_Temperature1  />
        </materialDesign:Card>

        <materialDesign:Card Grid.Column="1"  >
            <local:UC_Temperature  />
        </materialDesign:Card>

        <materialDesign:Card Grid.Column="2"  >
            <local:UC_Temperature2 />
        </materialDesign:Card>

        <materialDesign:Card Grid.Column="3"  >
            <local:UC_Temperature3  />
        </materialDesign:Card>

    </Grid>
</Window>
